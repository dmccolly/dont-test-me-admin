const KEYS = {
  names: 'dtm_names_v1',
  best: 'dtm_best_v1',
  msgs: 'dontTestMeMessages'
};

export function loadNames() {
  try { return JSON.parse(localStorage.getItem(KEYS.names)) || ["Custom Set 1","Custom Set 2"]; }
  catch { return ["Custom Set 1","Custom Set 2"]; }
}
export function saveNames(names) {
  localStorage.setItem(KEYS.names, JSON.stringify(names));
}

export function loadBest() {
  try {
    return JSON.parse(localStorage.getItem(KEYS.best)) ||
      {"0":{"time":null,"attempts":null},"1":{"time":null,"attempts":null},"2":{"time":null,"attempts":null}};
  } catch {
    return {"0":{"time":null,"attempts":null},"1":{"time":null,"attempts":null},"2":{"time":null,"attempts":null}};
  }
}
export function saveBest(best) { localStorage.setItem(KEYS.best, JSON.stringify(best)); }

export function loadMessages() {
  try { return JSON.parse(localStorage.getItem(KEYS.msgs)) || []; }
  catch { return []; }
}
export function saveMessages(arr) { localStorage.setItem(KEYS.msgs, JSON.stringify(arr)); }
export function clearMessages() { localStorage.removeItem(KEYS.msgs); }
